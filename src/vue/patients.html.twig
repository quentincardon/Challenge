{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Se connecter {% endblock %}

{% block contenu %}

    {% if form.valide is defined %}
        {% if form.valide == true %}
            <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
        {% else %}
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
        {% endif %}
    {% endif %}

    <p><center><h1>
            Liste des patients
        </h1></center>

</p>
<div class="panel panel-default">
    <!-- Default panel contents -->


    <!-- Table -->
    <div style="color:black" class="table-responsive">
        <table class="table table-hover table-striped">
            <tr><th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Adresse</th>
                <th>Numéro de téléphone</th>

            </tr>

            {% for pa in liste %}

                <tr><td>{{pa.nomCli}}</td>
                    <td>{{pa.prenomCli}}</td>
                    <td>{{pa.datenaisCli}}</td>
                    <td>{{pa.adresseCli}}</td>
                    <td>{{pa.telCli}}</td>
                <!-- <td> <div class="btn-group btn-group-lg"><a href="index.php?page=modifu&email={{u.email}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div></td> -->
                    <td><div class="btn-group btn-group-lg"><a href="index.php?page=patients&id={{pa.id}}"><span class="glyphicon glyphicon-trash" ariahidden="true"></span></a></div></td>
                </tr>

            {% endfor %}




        </table>
    </div>
    </br>
    </br>
    <button class="btn btn-lg btn-danger btn-block" type="submit"
            name="btSupprimer">Supprimer</button>

</div>

{% endblock %}

